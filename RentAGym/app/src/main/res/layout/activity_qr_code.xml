<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qr_scan_wall">

    <TextView
        android:id="@+id/tQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bCustomer1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="93dp"
        android:text="Click on Customer and Seller"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/bCustomer1"
        android:layout_width="239dp"
        android:layout_height="61dp"
        android:layout_above="@+id/bSeller2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@color/teal_200"
        android:text="Customer" />

    <Button
        android:id="@+id/bSeller2"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="395dp"
        android:backgroundTint="@color/teal_200"
        android:text="Seller" />

</RelativeLayout>